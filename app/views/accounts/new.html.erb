<h1>New Account</h1>

<%= form_for @account do |f|%>

<h2>Choose a category</h2>
<div>
	<%= f.select :name , options_for_select(["Home" , "Personal" , "Food", "Car" , "Shopping" ])%>
</div>
<h2>Enter the price</h2>
<div>
	<%= f.text_field :price %>
</div>
<%= f.submit %>

<% end %>



<%= link_to 'Back', accounts_path %>
